<h1>Details</h1>

<p>Content: <%= @blog.content %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@blog.image) %>
</p>

<% unless @blog.user == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'Cancel Favorite', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'To Favorite', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to "Back To Index", blogs_path, class: 'btn btn-primary' %>